    <input type="text" id="InsertarTextoBarra">
    <button onclick="barra_busqueda()">Buscar</button>
    <div id="Realizar_Busqueda"></div>

    <script>
        function barra_busqueda() {
            const query = document.getElementById('InsertarTextoBarra').value.toLowerCase();
            const Contenido = [
                "Gran Jaggi",
                "Gran Baggi",
                "Gran Wroggi",
                "Arzuros",
                "Lagombi",
                "Volvidon",
                "Ludroth Real",
                "Ludroth Purpúreo",
                "Qurupeco",
                "Qurupeco Carmesí",
                "Gobul",
                "Nibelsnarf",
                "Barroth",
                "Barroth Esmeralda",
                "Plesioth",
                "Plesioth Verde",
                "Duramboros",
                "Duramboros Herrumbroso",
                "Agnaktor",
                "Agnaktor Glacial",
                "Barioth",
                "Barioth Arenoso",
                "Gigginox",
                "Gigginox Aterrador",
                "Zinogre",
                "Zinogre Estigio",
                "Uragaan",
                "Uragaan Acerado",
                "Diablos",
                "Diablos Negra",
                "Rathian",
                "Rathian Rosa",
                "Rathian Dorada",
                "Rathalos",
                "Rathalos Celeste",
                "Rathalos Plateado",
                "Nargacuga",
                "Nargacuga Verdoso",
                "Nargacuga Lunar",
                "Lagiacrus",
                "Lagiacrus Marmóreo",
                "Lagiacrus del Abismo",
                "Brachydios",
                "Deviljho",
                "Jhen Mohran",
                "Jhen Mohran Sagrado",
                "Ceadeus",
                "Ceadeus Barba Dorada",
                "Alatreon",
                "Miralis Funesto"
            ];

            const Resultado = document.getElementById('Realizar_Busqueda');

            const Contenido_Existente = Contenido.filter(Contenido => Contenido.toLowerCase().includes(query));

            if (Contenido_Existente.length === 0) {
                Resultado.innerHTML = 'No existe este contenido';
            } else {
                const Lista_Resultados = document.createElement('ul');
                Contenido_Existente.forEach(Contenido => {
                    const Listado = document.createElement('ol');
                    const EnlaceHTML = document.createElement('a');
                    EnlaceHTML.href = `${Contenido}.html`;
                    EnlaceHTML.textContent = Contenido;
                    Listado.appendChild(EnlaceHTML);
                    Lista_Resultados.appendChild(Listado);
                });
                Resultado.appendChild(Lista_Resultados);
            }
        }
    </script>
